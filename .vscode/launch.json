{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python Debugger: Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--batch_size",
                "1",
                "--accumulation_steps",
                "1024",
                "--update_batch_size",
                "1",
                "--num_workers",
                "8",
                "--max_steps",
                "20000",
                "--save_interval",
                "1",
                "--log_interval",
                "1",
                "--test_interval",
                "-1",
                "--test_games",
                "4",
                "--win_reward",
                "1.0",
                "--point_reward",
                "0.1",
                "--damage_reward",
                "0.01",
                "--timeout_reward",
                "0.0",
                "--league_decks_student",
                "train_data/teacher.csv",
                "--league_decks_teacher",
                "train_data/teacher.csv"
            ],
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}:${workspaceFolder}/deckgym-core/python"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Python Debugger: Battle",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/battle.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--checkpoint",
                "checkpoints",
                "--deck_id_1",
                "train_data/8acd216f.txt",
                "--deck_id_2",
                "train_data/ab2bf611.txt",
                "--device",
                "cpu"
            ],
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}:${workspaceFolder}/deckgym-core/python"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Python Debugger: tree_viz",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/tree_viz.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--mined_source",
                "mined_data.jsonl",
                "--mined_index",
                "-1",
                "--max_depth",
                "10",
                "--device",
                "cpu",
                "--output",
                "analysis.sqlite",
            ],
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}:${workspaceFolder}/deckgym-core/python"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}