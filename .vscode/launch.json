{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Train Mewtwo vs Blastoise",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "--save_interval",
                "1",
                "--log_interval",
                "1",
                "--batch_size",
                "10",
                "--deck_id_1",
                "deckgym-core/example_decks/mewtwoex.txt",
                "--deck_id_2",
                "deckgym-core/example_decks/blastoiseex.txt",
                "--win_reward",
                "1.0",
                "--point_reward",
                "0.1",
                "--damage_reward",
                "0.01"
            ],
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}:${workspaceFolder}/deckgym-core/python"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}